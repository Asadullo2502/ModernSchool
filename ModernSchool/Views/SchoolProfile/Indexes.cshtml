        $(".level3Child_" + id).css('display', 'block');
        $(".navlvl3child_" + id).css('display', 'block');

        $(".criterias").css('display', 'none');
        $(".indexTitles").css('display', 'none');
        $(".indexCriterias_" + id).css('display', 'block');
