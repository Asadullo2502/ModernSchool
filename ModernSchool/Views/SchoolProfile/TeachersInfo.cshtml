@model School 
@{
    ViewData["Title"] = "TeachersInfo";
    Layout = "~/Views/Shared/_LayoutSchool.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header card-header-primary">
                <h4 class="card-title">Pedagog kadrlar</h4>
            </div>
            <div class="card-body">
                <p class="mt-3"><b>Umumiy ma'lumotlar</b></p>
                <table class="table table-bordered text-center">
                    <thead>
                        <tr>
                            <th><b>Jami o‘qituvchilar soni</b></th>
                            <th><b>Shu jumladan, kitob.uz ga a’zo bo‘lganlar soni*</b></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@Model.SchoolInfo.teachers_count</td>
                            <td>@Model.TeacherInfo?.kitob_uz_followers</td>
                        </tr>
                    </tbody>
                </table>
                <p>*2021 yil uchun maktab kutubxonasiga a’zo bo‘lganlar hisoblanadi</p>

                <p class="mt-3"><b>Ma’lumoti va toifalar bo‘yicha</b></p>
                <table class="table table-bordered text-center">
                    <thead>
                        <tr>
                            <th rowspan="2"><b>Oliy ma’lumotlilar soni</b></th>
                            <th rowspan="2"><b>O‘rta-maxsus ma’lumotlilar soni</b></th>
                            <th colspan="3"><b>Toifalari bo‘yicha</b></th>
                        </tr>
                        <tr>
                            <th><b>Oliy toifali</b></th>
                            <th><b>1-toifali</b></th>
                            <th><b>2-toifali</b></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@Model.TeacherInfo?.high_edu_teachers_count</td>
                            <td>@Model.TeacherInfo?.middle_spec_edu_teachers_count</td>
                            <td>@Model.TeacherInfo?.high_category_teachers_count</td>
                            <td>@Model.TeacherInfo?.first_category_teachers_count</td>
                            <td>@Model.TeacherInfo?.second_category_teachers_count</td>
                        </tr>
                    </tbody>
                </table>

                <p class="mt-3"><b>Chet tili o‘qituvchilari</b></p>
                <table class="table table-bordered text-center">
                    <thead>
                        <tr>
                            <th rowspan="2"><b>Chet tili o‘qituvchilari soni</b></th>
                            <th colspan="3"><b>Shu jumladan, milliy va xalqaro imtihon tizimlari bo‘yicha tilni bilish darajalari sertifikatiga ega bo‘lganlari soni</b></th>
                        </tr>
                        <tr>
                            <th><b>C1 va C2 darajaga</b></th>
                            <th><b>B2 darajaga</b></th>
                            <th><b>B1 darajaga</b></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@Model.TeacherInfo?.foreign_langs_teachers_count</td>
                            <td>@Model.TeacherInfo?.c1_c2_level_teachers_count</td>
                            <td>@Model.TeacherInfo?.b2_level_teachers_count</td>
                            <td>@Model.TeacherInfo?.b1_level_teachers_count</td>
                        </tr>
                    </tbody>
                </table>

                <p class="mt-3"><b>Maxsus pedagog kadrlar bilan ta’minlanganligi</b></p>
                <table class="table table-bordered text-center">
                    <thead>
                        <tr>
                            <th><b>Inklyuziv ta’lim tizimi joriy qilingan sinflar uchun maxsus pedagog shtat birliklari</b></th>
                            <th>@Model.TeacherInfo?.special_teachers_count</th>
                        </tr>
                    </thead>
                </table>

                <table class="table table-bordered text-center">
                    <thead>
                        <tr>
                            <th colspan="5"><b>Maxsus pedagoglar</b></th>
                        </tr>
                        <tr>
                            <th><b>Surdo</b></th>
                            <th><b>Tiflo</b></th>
                            <th><b>Olegofreno</b></th>
                            <th><b>Logoped</b></th>
                            <th><b>Boshqa</b></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@Model.TeacherInfo?.surdo_teachers_count</td>
                            <td>@Model.TeacherInfo?.tiflo_teachers_count</td>
                            <td>@Model.TeacherInfo?.olegofreno_teachers_count</td>
                            <td>@Model.TeacherInfo?.logoped_teachers_count</td>
                            <td>@Model.TeacherInfo?.other_teachers_count</td>
                        </tr>
                    </tbody>
                </table>

                <div class="form-check mt-3">
                    <label class="form-check-label">
                        <input class="form-check-input" type="checkbox" name="tyutors_existence" value="@Model.TeacherInfo?.tyutors_existence" @(Model.TeacherInfo?.tyutors_existence == true ? "checked" : "") disabled />
                        Maxsus pedagoglarga yaqindan ko‘maklashuvchi tyutorlar (yordamchi pedagog xodimlar) biriktirilganligi
                        <span class="form-check-sign">
                            <span class="check"></span>
                        </span>
                    </label>
                </div>

                <p style="text-align:right">Oxirgi o'zgartirilgan sana: <mark> @Model.TeacherInfo?.update_date </mark> </p>

                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
                    Ma'lumotlarni yangilash
                </button>
                <button type="button" class="btn btn-secondary " onclick="window.location.href='/SchoolProfile/Info/'">Ortga</button>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
</div>

<form id="form1" method="post">
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Ma'lumotlarni yangilash</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                    <div class="col-md-12 mb-3">
                        <div class="form-group">
                            <label class="bmd-label-floating">kitob.uz ga a’zo bo‘lganlar soni</label>
                            <input type="number" class="form-control" name="kitob_uz_followers" value="@Model.TeacherInfo?.kitob_uz_followers" required>
                        </div>
                    </div>
                    <div class="col-md-12 mb-3">
                        <div class="form-group">
                            <label class="bmd-label-floating">Oliy ma’lumotlilar soni</label>
                            <input type="number" class="form-control" name="high_edu_teachers_count" value="@Model.TeacherInfo?.high_edu_teachers_count" required>
                        </div>
                    </div>
                    <div class="col-md-12 mb-3">
                        <div class="form-group">
                            <label class="bmd-label-floating">O‘rta-maxsus ma’lumotlilar soni</label>
                            <input type="number" class="form-control" name="middle_spec_edu_teachers_count" value="@Model.TeacherInfo?.middle_spec_edu_teachers_count" required>
                        </div>
                    </div>
                    <div class="col-md-12 mb-3">
                        <div class="form-group">
                            <label class="bmd-label-floating">Oliy toifali</label>
                            <input type="number" class="form-control" name="high_category_teachers_count" value="@Model.TeacherInfo?.high_category_teachers_count" required>
                        </div>
                    </div>
                    <div class="col-md-12 mb-3">
                        <div class="form-group">
                            <label class="bmd-label-floating">1-toifali</label>
                            <input type="number" class="form-control" name="first_category_teachers_count" value="@Model.TeacherInfo?.first_category_teachers_count" required>
                        </div>
                    </div>
                    <div class="col-md-12 mb-3">
                        <div class="form-group">
                            <label class="bmd-label-floating">2-toifali</label>
                            <input type="number" class="form-control" name="second_category_teachers_count" value="@Model.TeacherInfo?.second_category_teachers_count" required>
                        </div>
                    </div>
                    <div class="col-md-12 mb-3">
                        <div class="form-group">
                            <label class="bmd-label-floating">Chet tili o‘qituvchilari soni	</label>
                            <input type="number" class="form-control" name="foreign_langs_teachers_count" value="@Model.TeacherInfo?.foreign_langs_teachers_count" required>
                        </div>
                    </div>
                    <div class="col-md-12 mb-3">
                        <div class="form-group">
                            <label class="bmd-label-floating">C1 va C2 darajaga ega bo‘lganlar</label>
                            <input type="number" class="form-control" name="c1_c2_level_teachers_count" value="@Model.TeacherInfo?.c1_c2_level_teachers_count" required>
                        </div>
                    </div>
                    <div class="col-md-12 mb-3">
                        <div class="form-group">
                            <label class="bmd-label-floating">B2 darajaga ega bo‘lganlar</label>
                            <input type="number" class="form-control" name="b2_level_teachers_count" value="@Model.TeacherInfo?.b2_level_teachers_count" required>
                        </div>
                    </div>
                    <div class="col-md-12 mb-3">
                        <div class="form-group">
                            <label class="bmd-label-floating">B1 darajaga ega bo‘lganlar</label>
                            <input type="number" class="form-control" name="b1_level_teachers_count" value="@Model.TeacherInfo?.b1_level_teachers_count" required>
                        </div>
                    </div>
                    <div class="col-md-12 mb-3">
                        <div class="form-group">
                            <label class="bmd-label-floating">Inklyuziv ta’lim tizimi joriy qilingan sinflar uchun maxsus pedagog shtat birliklari</label>
                            <input type="number" class="form-control" name="special_teachers_count" value="@Model.TeacherInfo?.special_teachers_count" required>
                        </div>
                    </div>
                    <div class="col-md-12 mb-3">
                        <div class="form-group">
                            <label class="bmd-label-floating">Surdo pedagoglar</label>
                            <input type="number" class="form-control" name="surdo_teachers_count" value="@Model.TeacherInfo?.surdo_teachers_count" required>
                        </div>
                    </div>
                    <div class="col-md-12 mb-3">
                        <div class="form-group">
                            <label class="bmd-label-floating">Tiflo pedagoglar</label>
                            <input type="number" class="form-control" name="tiflo_teachers_count" value="@Model.TeacherInfo?.tiflo_teachers_count" required>
                        </div>
                    </div>
                    <div class="col-md-12 mb-3">
                        <div class="form-group">
                            <label class="bmd-label-floating">Olegofreno pedagoglar</label>
                            <input type="number" class="form-control" name="olegofreno_teachers_count" value="@Model.TeacherInfo?.olegofreno_teachers_count" required>
                        </div>
                    </div>
                    <div class="col-md-12 mb-3">
                        <div class="form-group">
                            <label class="bmd-label-floating">Logoped pedagoglar</label>
                            <input type="number" class="form-control" name="logoped_teachers_count" value="@Model.TeacherInfo?.logoped_teachers_count" required>
                        </div>
                    </div>
                    <div class="col-md-12 mb-3">
                        <div class="form-group">
                            <label class="bmd-label-floating">Boshqa maxsus pedagoglar</label>
                            <input type="number" class="form-control" name="other_teachers_count" value="@Model.TeacherInfo?.other_teachers_count" required>
                        </div>
                    </div>
                    <div class="col-md-12 mb-3">
                        <div class="form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" type="checkbox" name="tyutors_existence"  @(Model.TeacherInfo?.tyutors_existence == true ? "checked" : "") />
                                Maxsus pedagoglarga yaqindan ko‘maklashuvchi tyutorlar (yordamchi pedagog xodimlar) biriktirilganligi
                                <span class="form-check-sign">
                                    <span class="check"></span>
                                </span>
                            </label>
                        </div>
                    </div>

                </div>

                <input type="hidden" class="form-control" name="school_id" value="@Model.Id" />
                <input type="hidden" class="form-control" name="id" value="@Model.TeacherInfo?.id" />
                <input type="hidden" class="form-control" name="year" value="@Model.TeacherInfo?.year" />

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Ortga</button>
                    <button type="submit" class="btn btn-primary">Saqlash</button>
                </div>
            </div>
        </div>
    </div>
</form>

