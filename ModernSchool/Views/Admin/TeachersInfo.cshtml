@model School
@{
    ViewData["Title"] = "TeachersInfo";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header card-header-primary">
                <h4 class="card-title">Pedagog kadrlar</h4>
            </div>
            <div class="card-body">
                <p class="mt-3"><b>Umumiy ma'lumotlar</b></p>
                <table class="table table-bordered text-center">
                    <thead>
                        <tr>
                            <th><b>Jami o‘qituvchilar soni</b></th>
                            <th><b>Shu jumladan, kitob.uz ga a’zo bo‘lganlar soni*</b></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@Model.SchoolInfo.teachers_count</td>
                            <td>@Model.TeacherInfo?.kitob_uz_followers</td>
                        </tr>
                    </tbody>
                </table>
                <p>*2021 yil uchun maktab kutubxonasiga a’zo bo‘lganlar hisoblanadi</p>

                <p class="mt-3"><b>Ma’lumoti va toifalar bo‘yicha</b></p>
                <table class="table table-bordered text-center">
                    <thead>
                        <tr>
                            <th rowspan="2"><b>Oliy ma’lumotlilar soni</b></th>
                            <th rowspan="2"><b>O‘rta-maxsus ma’lumotlilar soni</b></th>
                            <th colspan="3"><b>Toifalari bo‘yicha</b></th>
                        </tr>
                        <tr>
                            <th><b>Oliy toifali</b></th>
                            <th><b>1-toifali</b></th>
                            <th><b>2-toifali</b></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@Model.TeacherInfo?.high_edu_teachers_count</td>
                            <td>@Model.TeacherInfo?.middle_spec_edu_teachers_count</td>
                            <td>@Model.TeacherInfo?.high_category_teachers_count</td>
                            <td>@Model.TeacherInfo?.first_category_teachers_count</td>
                            <td>@Model.TeacherInfo?.second_category_teachers_count</td>
                        </tr>
                    </tbody>
                </table>

                <p class="mt-3"><b>Chet tili o‘qituvchilari</b></p>
                <table class="table table-bordered text-center">
                    <thead>
                        <tr>
                            <th rowspan="2"><b>Chet tili o‘qituvchilari soni</b></th>
                            <th colspan="3"><b>Shu jumladan, milliy va xalqaro imtihon tizimlari bo‘yicha tilni bilish darajalari sertifikatiga ega bo‘lganlari soni</b></th>
                        </tr>
                        <tr>
                            <th><b>C1 va C2 darajaga</b></th>
                            <th><b>B2 darajaga</b></th>
                            <th><b>B1 darajaga</b></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@Model.TeacherInfo?.foreign_langs_teachers_count</td>
                            <td>@Model.TeacherInfo?.c1_c2_level_teachers_count</td>
                            <td>@Model.TeacherInfo?.b2_level_teachers_count</td>
                            <td>@Model.TeacherInfo?.b1_level_teachers_count</td>
                        </tr>
                    </tbody>
                </table>

                <p class="mt-3"><b>Maxsus pedagog kadrlar bilan ta’minlanganligi</b></p>
                <table class="table table-bordered text-center">
                    <thead>
                        <tr>
                            <th><b>Inklyuziv ta’lim tizimi joriy qilingan sinflar uchun maxsus pedagog shtat birliklari</b></th>
                            <th>@Model.TeacherInfo?.special_teachers_count</th>
                        </tr>
                    </thead>
                </table>

                <table class="table table-bordered text-center">
                    <thead>
                        <tr>
                            <th colspan="5"><b>Maxsus pedagoglar</b></th>
                        </tr>
                        <tr>
                            <th><b>Surdo</b></th>
                            <th><b>Tiflo</b></th>
                            <th><b>Olegofreno</b></th>
                            <th><b>Logoped</b></th>
                            <th><b>Boshqa</b></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@Model.TeacherInfo?.surdo_teachers_count</td>
                            <td>@Model.TeacherInfo?.tiflo_teachers_count</td>
                            <td>@Model.TeacherInfo?.olegofreno_teachers_count</td>
                            <td>@Model.TeacherInfo?.logoped_teachers_count</td>
                            <td>@Model.TeacherInfo?.other_teachers_count</td>
                        </tr>
                    </tbody>
                </table>

                <div class="form-check mt-3">
                    <label class="form-check-label">
                        <input class="form-check-input" type="checkbox" name="tyutors_existence" value="@Model.TeacherInfo?.tyutors_existence" @(Model.TeacherInfo?.tyutors_existence == true ? "checked" : "") disabled />
                        Maxsus pedagoglarga yaqindan ko‘maklashuvchi tyutorlar (yordamchi pedagog xodimlar) biriktirilganligi
                        <span class="form-check-sign">
                            <span class="check"></span>
                        </span>
                    </label>
                </div>

                <p style="text-align:right">Oxirgi o'zgartirilgan sana: <mark> @Model.TeacherInfo?.update_date </mark> </p>

                <button type="button" class="btn btn-secondary " onclick="window.location.href='/Admin/SchoolProfile/'">Ortga</button>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
</div>

