@model Criteria
@{
    ViewData["Title"] = "EditCriteria";
    Layout = "~/Views/Shared/_LayoutAdminNew.cshtml";
    string lang = Context.Request.Cookies["lang"];
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header card-header-primary">
                <h4 class="card-title">@Localization.GetTranslate("criteria", lang).ToUpper() (@Localization.GetTranslate("edit", lang).ToUpper())</h4>
            </div>
            <div class="card-body">
                <form method="post">

                    <div class="row">
                        <div class="col-md-12 mb-3">
                            <div class="form-group">
                                <label class="bmd-label-floating">@Localization.GetTranslate("index", lang).ToUpper()</label>
                                <select class="custom-select" name="IndexId" id="Indexes" required>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-12 mb-3">
                            <div class="form-group">
                                <label class="bmd-label-floating">@Localization.GetTranslate("name_uz", lang).ToUpper()</label>
                                <textarea class="form-control" name="NameUz" rows="1" required>@Model.NameUz</textarea>
                            </div>
                        </div>
                        <div class="col-md-12 mb-3">
                            <div class="form-group">
                                <label class="bmd-label-floating">@Localization.GetTranslate("name_uzk", lang).ToUpper()</label>
                                <textarea class="form-control" name="NameUzk" rows="1" required>@Model.NameUzk</textarea>
                            </div>
                        </div>
                        <div class="col-md-12 mb-3">
                            <div class="form-group">
                                <label class="bmd-label-floating">@Localization.GetTranslate("name_ru", lang).ToUpper()</label>
                                <textarea class="form-control" name="NameRu" rows="1" required>@Model.NameRu</textarea>
                            </div>
                        </div>
                        <div class="col-md-12 mb-3">
                            <div class="form-group">
                                <label class="bmd-label-floating">@Localization.GetTranslate("name_en", lang).ToUpper()</label>
                                <textarea class="form-control" name="NameEn" rows="1" required>@Model.NameEn</textarea>
                            </div>
                        </div>
                        <div class="col-md-12 mb-3">
                            <div class="form-group">
                                <label class="bmd-label-floating">@Localization.GetTranslate("type", lang).ToUpper()</label>
                                <select class="custom-select" name="Type" id="Types" required>
                                    <option value="@null">@Localization.GetTranslate("select...", lang).ToUpper()</option>
                                    <option value="radio">radio</option>
                                    <option value="checkbox">checkbox</option>
                                    <option value="number">number</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-12 mb-3">
                            <div class="form-group">
                                <label class="bmd-label-floating">@Localization.GetTranslate("max_ball", lang).ToUpper()</label>
                                <input type="text" inputmode="numeric" pattern="[-+]?[0-9]*[,]?[0-9]+" class="form-control" name="MaxBall" value="@Model.MaxBall" required>
                            </div>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary ">@Localization.GetTranslate("save", lang).ToUpper()</button>
                    <button type="button" class="btn btn-secondary " onclick="window.location.href='/Admin/Criterias/'">@Localization.GetTranslate("back", lang).ToUpper()</button>
                    <div class="clearfix"></div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    $.getJSON("/GetApi/GetIndexes/999", function (result) {
        var $dropdown = $("#Indexes");
        $dropdown.append($("<option />").val(null).text("@Html.Raw(Localization.GetTranslate("select...", lang).ToUpper())"));
        $.each(result, function () {
            if (this.id == @Model.IndexId) {
                $dropdown.append($("<option selected />").val(this.id).text(this.shortName));
            }
            else {
                $dropdown.append($("<option />").val(this.id).text(this.shortName));
            }
        });

        const select = document.querySelector('#Types').getElementsByTagName('option');

        for (let i = 0; i < select.length; i++) {
            if (select[i].value === '@Model.Type') select[i].selected = true;
        }
    });
</script>

