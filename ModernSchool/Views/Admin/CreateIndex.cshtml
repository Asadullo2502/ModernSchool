
@{
    ViewData["Title"] = "CreateIndex";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header card-header-primary">
                <h4 class="card-title">INDEKS QO'SHISH</h4>
            </div>
            <div class="card-body">
                <form method="post">

                    <div class="row">
                        <div class="col-md-12 mb-3">
                            <div class="form-group">
                                <label class="bmd-label-floating">YO'QORI INDEKS</label>
                                <select class="custom-select" name="ParentId" id="Indexes" required>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-12 mb-3">
                            <div class="form-group">
                                <label class="bmd-label-floating">QISQACHA NOMI</label>
                                <input type="text" class="form-control" name="ShortName" required>
                            </div>
                        </div>
                        <div class="col-md-12 mb-3">
                            <div class="form-group">
                                <label class="bmd-label-floating">NOMI (O'ZBEKCHA LOTIN)</label>
                                <textarea class="form-control" name="NameUz" rows="2" required></textarea>
                            </div>
                        </div>
                        <div class="col-md-12 mb-3">
                            <div class="form-group">
                                <label class="bmd-label-floating">NOMI (O'ZBEKCHA KIRIL)</label>
                                <textarea class="form-control" name="NameUzk" rows="2" required></textarea>
                            </div>
                        </div>
                        <div class="col-md-12 mb-3">
                            <div class="form-group">
                                <label class="bmd-label-floating">NOMI (RUSCHA)</label>
                                <textarea class="form-control" name="NameRu" rows="2" required></textarea>
                            </div>
                        </div>
                        <div class="col-md-12 mb-3">
                            <div class="form-group">
                                <label class="bmd-label-floating">NOMI (INGLIZCHA)</label>
                                <textarea class="form-control" name="NameEn" rows="2" required></textarea>
                            </div>
                        </div>
                        <div class="col-md-12 mb-3">
                            <div class="form-group">
                                <label class="bmd-label-floating">MAKSIMAL BALL</label>
                                <input type="number" min="0" class="form-control" name="MaxBall" required>
                            </div>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary pull-right">Saqlash</button>
                    <button type="button" class="btn btn-dark pull-right" onclick="window.location.href='/Admin/Indexes/'">Ortga</button>
                    <div class="clearfix"></div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    $.getJSON("/GetApi/GetIndexes/4", function (result) {
        var $dropdown = $("#Indexes");
        $dropdown.append($("<option />").val(null).text("Tanlang..."));
        $dropdown.append($("<option />").val(0).text("Yuqori index yo'q"));
        $.each(result, function () {
            $dropdown.append($("<option />").val(this.id).text(this.shortName));
        });
    });
</script>