@model IEnumerable<District>
@{
    ViewData["Title"] = "Districts";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    int i = 1;
}


<div class="row">
    <div class="col-12 text-right">
        <input type="button" class="btn btn-info" value="qo'shish" onclick="window.location.href='/Admin/CreateDistrict'" />
    </div>
    <div class="col-md-12">
        <div class="card">
            <div class="card-header card-header-info">
                <h4 class="card-title ">TUMANLAR</h4>
            </div>
            <div class="card-body">
                <form>
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>Hudud</label>
                                <select class="custom-select" name="RegionId" id="Regions">
                                </select>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <button class="btn btn-info" type="submit" style="margin-top:29px;">
                                    <span class="btn-icon-wrapper pr-2 opacity-9">
                                        <i class="fa fa-search fa-w-20"></i>
                                    </span>
                                    FILTRLASH
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
                <div class="table-responsive">
                    <table class="table" id="myTable">
                        <thead class="text-info">
                            <tr>
                                <th>
                                    #
                                </th>
                                <th>
                                    Yuqori tashkilot
                                </th>
                                <th>
                                    Nomi (o'zbekcha)
                                </th>
                                <th>
                                    Nomi (kirilcha)
                                </th>
                                <th>
                                    Nomi (ruscha)
                                </th>
                                <th>
                                    Nomi (inglizcha)
                                </th>
                                <th>

                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.OrderBy(x => x.parent_id).ThenBy(x => x.id))
                            {
                                <tr>
                                    <td>
                                        @i
                                    </td>
                                    <td>
                                        @item.Region?.name_uz
                                    </td>
                                    <td>
                                        @item.name_uz
                                    </td>
                                    <td>
                                        @item.name_uzk
                                    </td>
                                    <td>
                                        @item.name_ru
                                    <td>
                                        @item.name_en
                                    </td>
                                    <td style="text-align:right">
                                        <button type="button" class="btn btn-warning" onclick="window.location.href = '/Admin/EditDistrict/@item.id'" data-toggle="tooltip" data-placement="bottom" title="O'zgartirish">
                                            <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                                        </button>
                                        <button class="btn btn-danger open-exampleModal" value="@item.id" onclick="deleteDistrict(@item.id)" data-toggle="tooltip" data-placement="bottom" title="O'chirish">
                                            <i class="fa fa-trash-o" aria-hidden="true"></i>
                                        </button>
                                    </td>
                                </tr>
                                i++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $('#myTable').DataTable({
        dom: 'Bfrtip',
        buttons: [
            'excel',
            {
                extend: 'pdfHtml5',
                orientation: 'landscape',
                pageSize: 'LEGAL',
            },
            'print'
        ],
        pageLength: 20,
    });

    function deleteDistrict(id) {
        $('#DistrictID').val(id);
        $('#exampleModal').modal('show');
    }

    $.getJSON("/GetApi/GetRegions/", function (result) {
        var $dropdown = $("#Regions");
        $dropdown.append($("<option />").val(0).text("Barcha viloyatlar"));
        $.each(result, function () {
            if (@ViewBag.region == this.id) {
                $dropdown.append($("<option selected />").val(this.id).text(this.name_uz));
            }
            else {
                $dropdown.append($("<option />").val(this.id).text(this.name_uz));
            }
        });
    });
</script>

<form method="post" action="/Admin/DeleteDistrict/">
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">TUMAN O'CHIRISH</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>O'chirilgan ma'lumotlar qayta tiklanmaydi</p>
                    <input type="hidden" id="DistrictID" name="id" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light" data-dismiss="modal">ORTGA</button>
                    <button type="submit" class="btn btn-danger">O'CHIRISH</button>
                </div>
            </div>
        </div>
    </div>
</form>