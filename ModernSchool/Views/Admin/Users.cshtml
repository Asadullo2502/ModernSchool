@model IEnumerable<User>
@{
    ViewData["Title"] = "Users";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    int i = 1;
}

<div class="row">
    <div class="col-12 text-right">
        <input type="button" class="btn btn-info" value="qo'shish"  onclick="window.location.href='/Admin/CreateUser'" />
    </div>
    <div class="col-md-12">
        <div class="card">
            <div class="card-header card-header-info">
                <h4 class="card-title ">FOYDALANUVCHILAR</h4>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table" id="myTable">
                        <thead class="text-info">
                            <tr>
                                <th width="5%">
                                    #
                                </th>
                                <th width="15%">
                                    F.I.SH.
                                </th>
                                <th width="10%">
                                    ROL
                                </th>
                                <th width="10%">
                                    LOGIN
                                </th>
                                <th width="15%">
                                    TASHKILOT
                                </th>
                                <th width="10%">
                                    TELEFON
                                </th>
                                <th width="10%"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @i
                                    </td>
                                    <td>
                                        @item.FullName
                                    </td>
                                    <td>
                                        @item.Role?.Name
                                    </td>
                                    <td>
                                        @item.Login
                                    </td>
                                    @if (item.RoleId == 5)
                                    {
                                        <td>
                                            @item.Region?.NameUz <br /> @item.District?.NameUz <br /> @item.School?.NameUz
                                        </td>
                                    }
                                    else if (item.RoleId == 4)
                                    {
                                        <td>
                                            @item.Region?.NameUz <br /> @item.District?.NameUz
                                        </td>
                                    }
                                    else if (item.RoleId == 3)
                                    {
                                        <td>
                                            @item.Region?.NameUz
                                        </td>
                                    }
                                    else
                                    {
                                        <td></td>
                                    }
                                    <td>
                                        @item.Phone
                                    </td>
                                    <td style="text-align:right">
                                        <button type="button" class="btn btn-warning" onclick="window.location.href = '/Admin/EditUser/@item.Id'" data-toggle="tooltip" data-placement="bottom" title="O'zgartirish">
                                            <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                                        </button>
                                        <button class="btn btn-danger open-exampleModal" value="@item.Id" onclick="deleteUser(@item.Id)" data-toggle="tooltip" data-placement="bottom" title="O'chirish">
                                            <i class="fa fa-trash-o" aria-hidden="true"></i>
                                        </button>
                                    </td>
                                </tr>
                                i++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $('#myTable').DataTable({
        dom: 'Bfrtip',
        buttons: [
            'excel',
            {
                extend: 'pdfHtml5',
                orientation: 'landscape',
                pageSize: 'LEGAL',
            },
            'print'
        ],
        pageLength: 10,
    });

    function deleteUser(id) {
        $('#userID').val(id);
        $('#exampleModal').modal('show');
    }
</script>

<form method="post" action="/Admin/DeleteUser/">
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">FOYDALANUVCHI O'CHIRISH</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>O'chirilgan ma'lumotlar qayta tiklanmaydi</p>
                    <input type="hidden" id="userID" name="id" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light" data-dismiss="modal">ORTGA</button>
                    <button type="submit" class="btn btn-danger">O'CHIRISH</button>
                </div>
            </div>
        </div>
    </div>
</form>