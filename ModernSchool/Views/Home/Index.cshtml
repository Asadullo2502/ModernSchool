@model PageData
@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_LayoutAdminNew.cshtml";
    string lang = Context.Request.Cookies["lang"];
}

<style>
    .bo {
        width: 100%;
        height: 75px;
        overflow: hidden;
        text-overflow: ellipsis;
        content: "";
        position: relative;
        line-height: 1.3;
    }

        .bo:before {
            content: '';
            width: 100%;
            height: 100%;
            position: absolute;
            left: 0;
            top: 0;
            background: linear-gradient(transparent 30px, white);
        }

    .card:hover {
        border-color: #3f6ad8;
        background-image: url('../img/book.svg');
        background-repeat: no-repeat;
        background-size: 200px;
        background-position: right bottom;
    }

    #card {
        background-image: url('../img/book.svg');
        background-repeat: no-repeat;
        background-size: 100px;
        background-position: right 5% bottom;
    }

    #card:hover {
        width: 600px !important;
    }

    b {
        border: green solid 1px;
        border-radius: 15px;
        padding-left: 7px;
        padding-right: 7px;
        padding-bottom: 5px;
        padding-top: 5px;
    }
</style>

<div class="row">
    @foreach (var item in Model.Indexes.Where(x => x.Level == 1))
    {
        <div class="col">
            <div id="card" class="card card-body mb-3" style="border-width:2px; cursor:pointer">
                <div class="row">
                    <div class="col-9">
                        <b class="text-success">@(lang == "ru" ? item.ShortName : item.ShortName)</b>
                        <hr />
                        <div class="bo">@(lang == "ru" ? item.NameRu : item.NameUz)</div>
                    </div>
                    <div class="col-3" style="text-align:right">
                        <h5 class="text-primary">@(Model.IndexesDataStatuses.FirstOrDefault(x=>x.Id == item.Id).Selected)/@(Model.IndexesDataStatuses.FirstOrDefault(x=>x.Id == item.Id).Count)</h5>
                    </div>
                </div>
            </div>
        </div>
    }
</div>